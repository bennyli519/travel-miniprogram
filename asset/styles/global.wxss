.block-title {
  padding: 5rpx 10rpx;
  color: #491f11;
  font-size: 12px;
}
.block-title .info {
  margin: 2px 8px;
  font-weight: bold;
}
.block-title .line {
  position: relative;
  height: 2px;
  width: 100%;
  background-color: #491f11;
}
.block-title .line::before {
  position: absolute;
  left: -5px;
  top: -2px;
  content: '';
  width: 5px;
  height: 5px;
  background-color: #FFD02C;
  border: 1px solid #491f11;
  border-radius: 50%;
}

.content{
    padding: 20rpx;
}